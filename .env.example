# ===========================================
# GIDEON 3.0 - Environment Configuration
# ===========================================
# Copy this file to .env and fill in your values

# -------------------------------------------
# OpenRouter (RECOMMENDED - Multimodal Gateway)
# Get your API key at: https://openrouter.ai/keys
# -------------------------------------------
OPENROUTER_API_KEY=sk-or-v1-your-key-here
OPENROUTER_DEFAULT_MODEL=openai/gpt-4o-mini
OPENROUTER_SITE_URL=https://gideon.ai
OPENROUTER_SITE_NAME=GIDEON 3.0

# -------------------------------------------
# Default AI Provider
# Options: openrouter, openai, anthropic, google, groq, ollama
# -------------------------------------------
DEFAULT_AI_PROVIDER=openrouter

# -------------------------------------------
# OpenAI (Direct)
# -------------------------------------------
OPENAI_API_KEY=

# -------------------------------------------
# Anthropic Claude (Direct)
# -------------------------------------------
ANTHROPIC_API_KEY=

# -------------------------------------------
# Google Gemini (Direct)
# -------------------------------------------
GOOGLE_API_KEY=

# -------------------------------------------
# Groq (Fast Inference)
# -------------------------------------------
GROQ_API_KEY=

# -------------------------------------------
# Ollama (Local)
# -------------------------------------------
OLLAMA_BASE_URL=http://localhost:11434

# -------------------------------------------
# Azure Speech Services (Voice)
# -------------------------------------------
AZURE_SPEECH_KEY=
AZURE_SPEECH_REGION=westeurope

# -------------------------------------------
# Security
# -------------------------------------------
SECRET_KEY=change-this-to-a-secure-random-string

# -------------------------------------------
# Database
# -------------------------------------------
DATABASE_URL=sqlite+aiosqlite:///./gideon2.db
REDIS_URL=redis://localhost:6379/0
